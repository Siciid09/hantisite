import { NextResponse } from 'next/server';
import type { NextRequest } from 'next/server';

export function middleware(request: NextRequest) {
  const { pathname } = request.nextUrl;

  // Define paths that don't require authentication
  const publicPaths = ['/login']; // Add '/signup', '/forgot-password' etc. if needed

  // Get authentication token (example: from a cookie named 'firebaseAuthToken')
  // NOTE: Firebase Auth SDK for client-side stores this in IndexedDB, not a cookie by default.
  // For server-side protection, you often set a custom cookie after login.
  // For simplicity, we'll check for a placeholder cookie.
  // **A more robust solution involves session management.**
  const authToken = request.cookies.get('session')?.value; // Using 'session' as an example

  // If trying to access a protected route (not in publicPaths) AND no token
  if (!publicPaths.includes(pathname) && !authToken && !pathname.startsWith('/api/auth')) { // Also exclude auth API
    const loginUrl = new URL('/login', request.url);
    loginUrl.searchParams.set('redirectedFrom', pathname); // Optional: remember where user was going
    return NextResponse.redirect(loginUrl);
  }

  // If trying to access a public route (like /login) WHILE logged in
  if (publicPaths.includes(pathname) && authToken) {
     const dashboardUrl = new URL('/dashboard', request.url);
     return NextResponse.redirect(dashboardUrl);
  }

  // Allow the request to proceed
  return NextResponse.next();
}

// Configure the middleware to run on specific paths
export const config = {
  matcher: [
    /*
     * Match all request paths except for the ones starting with:
     * - _next/static (static files)
     * - _next/image (image optimization files)
     * - favicon.ico (favicon file)
     */
    '/((?!_next/static|_next/image|favicon.ico).*)',
  ],
};
